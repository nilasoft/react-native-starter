{
  "extends": "@react-native-community",
  "rules": {
    "prettier/prettier": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "react-hooks/exhaustive-deps": "off",
    "quotes": [
      "error",
      "single"
    ],
    "jsx-quotes": [
      "error",
      "prefer-single"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "curly": [
      "error",
      "multi-or-nest",
      "consistent"
    ],
    "react/jsx-tag-spacing": [
      "error",
      {
        "closingSlash": "never",
        "beforeSelfClosing": "never",
        "afterOpening": "never",
        "beforeClosing": "never"
      }
    ]
  }
}
